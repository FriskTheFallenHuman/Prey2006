{
		"version": 8,
		"cmakeMinimumRequired": {
				"major": 3,
				"minor": 21,
				"patch": 0
		},
		"configurePresets": [
				{
						"name": "ninja-multi-vcpkg",
						"displayName": "Ninja Multi-Config x86_64",
						"description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
						"binaryDir": "${sourceDir}/builds/${presetName}",
						"generator": "Ninja Multi-Config",
						"toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
						"architecture": {
							"value": "x64",
							"strategy": "set"
						},
						"cacheVariables": {
							"VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
						}
				},
				{
						"name": "ninja-multi-vcpkg-x86",
						"displayName": "Ninja Multi-Config x86",
						"description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
						"binaryDir": "${sourceDir}/builds/${presetName}",
						"generator": "Ninja Multi-Config",
						"toolchainFile": "${sourceDir}/../vcpkg/scripts/buildsystems/vcpkg.cmake",
						"architecture": {
							"value": "Win32",
							"strategy": "set"
						},
						"cacheVariables": {
							"VCPKG_TARGET_TRIPLET": "x86-windows-static-md"
						}
				}
		],
		"buildPresets": [
				{
						"name": "ninja-vcpkg-debug",
						"configurePreset": "ninja-multi-vcpkg",
						"displayName": "Build (Debug)",
						"description": "Build with Ninja/vcpkg (Debug x86_64)",
						"configuration": "Debug"
				},
				{
						"name": "ninja-vcpkg-release",
						"configurePreset": "ninja-multi-vcpkg",
						"displayName": "Build (Release)",
						"description": "Build with Ninja/vcpkg (Release x86_64)",
						"configuration": "Release"
				},
				{
						"name": "ninja-vcpkg-debug-x86",
						"configurePreset": "ninja-multi-vcpkg-x86",
						"displayName": "Build (Debug)",
						"description": "Build with Ninja/vcpkg (Debug x86)",
						"configuration": "Debug"
				},
				{
						"name": "ninja-vcpkg-release-x86",
						"configurePreset": "ninja-multi-vcpkg-x86",
						"displayName": "Build (Release)",
						"description": "Build with Ninja/vcpkg (Release x86)",
						"configuration": "Release"
				},
				{
						"name": "ninja-vcpkg",
						"configurePreset": "ninja-multi-vcpkg",
						"displayName": "Build x86_64",
						"description": "Build with Ninja/vcpkg"
				},
				{
						"name": "ninja-vcpkg-x86",
						"configurePreset": "ninja-multi-vcpkg-x86",
						"displayName": "Build x86",
						"description": "Build with Ninja/vcpkg"
				}
		]
}
