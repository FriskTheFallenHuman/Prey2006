//tommy spirit material
//===============================================
models/player/tommyspirit
{
	collision
	matter_flesh
	noshadows

	{
		blend	add
		map		textures/liquid/noise

		//rww - factor in the mpdamage fade parm, which will flash the spirit
		red		(0.3+sintable[time*0.1]*0.1) + mpdamage_f[(time*2)+parm5]
		blue	(0.9+costable[time*0.1]*0.1) + mpdamage_f[(time*2)+parm5]
		green	(0.3+sintable[time*0.1]*0.1) + mpdamage_f[(time*2)+parm5]

		scroll  sintable[time*0.04]*0.1, costable[time*0.04]*0.1

		glowstage
	}
}

