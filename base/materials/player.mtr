		fragmentmap 6 models/player/shadermaps/tommy_liquid_body_s_leather
		fragmentmap 7 models/player/shadermaps/tommy_liquid_body_mask
	}
	{
		// skin
		shaderLevel3
		blend shader
		program skin.vfp

		fragmentparm	0	1, 0, 0, 0		// mask channel
		// fragmentparm	1	0.2, -0.0, -.0, .77		// sss color, power
		fragmentparm	1	0.6, 0.2, 0.2		// sss color
		fragmentparm	2	0.5, 0.5		// wrap around
		fragmentparm	3	1.5				// rim
		fragmentparm	4	1.82, 1.82, 1.9, 12		// specular color, power
		fragmentparm	5	0.39, 0.39, 0.42, 10		// glancing specular color, power
		fragmentparm	6	0.15

		fragmentmap 1 highres addnormals(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_local, heightmap(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_h, 7 ) )
		fragmentmap 4 models/player/shadermaps/tommy_liquid_body
		fragmentmap 5 models/player/shadermaps/tommy_liquid_body_s
		fragmentmap 6 models/player/shadermaps/tommy_liquid_body_s
		fragmentmap 7 models/player/shadermaps/tommy_liquid_body_mask
	}
	{
		shaderLevel3
		blend shader
		program cloth.vfp

		fragmentparm	0	0, 1, 0, 0		// mask channel

		// I recommend leaving these settings
		//fragmentparm	1	0, 0.99		// scatter, diffuse
		//fragmentparm	2	1.2, 1.5, 0.5, 1.8		// side light fuzz, fuzz sharpness, view fuzz, fuzz power
		//fragmentparm	3	0.1					// fuzz amount

		fragmentparm	1	0.35, 0.65		// scatter, diffuse
		fragmentparm	2	1.2, 1.5, 0.5, 1.5		// side light fuzz, fuzz sharpness, view fuzz, fuzz power
		fragmentparm	3	0.15					// fuzz amount

		fragmentmap 1 highres addnormals(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_local, heightmap(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_h, 7 ) )
		fragmentmap 4 models/player/shadermaps/tommy_liquid_body
		fragmentmap 6 models/player/shadermaps/tommy_liquid_body_mask
	}
	{
		shaderLevel3
		blend shader
		program interactionMasked.vfp

		fragmentparm	0	0, 0, 0, 1		// mask channel

		fragmentmap 1 highres addnormals(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_local, heightmap(models/player/tommy_liquid/tommy_liquid_body/tommy_liquid_body_h, 7 ) )
		fragmentmap 4 models/player/shadermaps/tommy_liquid_body
		fragmentmap 5 models/player/shadermaps/tommy_liquid_body_s
		fragmentmap 7 models/player/shadermaps/tommy_liquid_body_mask
	}
	{ // Scope view texture
		blend add
		map textures/sfx/monsterSniperView
		texgen screen
		scroll 0.5, 0.5
		scale 0.5, 0.5
		clamp
		glowStage
		scopeView	// Only visible in the rifle scope view
	}
}

