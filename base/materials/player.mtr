//===================================================================================
// player spirit walk proxy materials
// these fade out when close to the proxy since you can be standing inside the proxy
//===================================================================================

models/player/tommyhead_proxy
{
	//noselfshadow
//	translucent
//	unsmoothedtangents
	matter_flesh
	noshadows

	renderbump -size 1024 1024 -trace 0.01 models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local2 models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_headhi_head2.lwo

//	diffusemap models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head
	{
		blend diffusemap
		map models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head
		//alphatest	0.5
	}
	bumpmap	addnormals(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local, heightmap(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_h, 7 ) )
//	bumpmap	models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local
	specularmap models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_s

	{
		maskcolor
		map makealpha( models/player/tommy_liquid/wisp_mask )
		alphaTest 0.06 + 1.8 - distance / 28
		scale 2,2
	}
	{
		privatePolygonOffset	-1		// stage-only polygon offset

		map makealpha( models/player/tommy_liquid/wisp_mask )
		alphaTest 1.8 - distance / 28
		color		0.19, 0.17, 0.2, 1
		scale 2,2
		glowStage
	}
	{	if (parm7==1)	// Stage that flashes when wraith SPIRIT energy arrives in deathwalk
		blend add
		map _white
		// Orange color was 0.76, 0.26, 0.08
		red		energyarrival[time+parm4] * 0.0
		green	energyarrival[time+parm4] * 0.3
		blue	energyarrival[time+parm4] * 0.7
		glowstage
	}
	{	if (parm7==2)	// Stage that flashes when wraith HEALTH energy arrives in deathwalk
		blend add
		map _white
		red		energyarrival[time+parm4] * 0.6
		green	energyarrival[time+parm4] * 0.0
		blue	energyarrival[time+parm4] * 0.0
		glowstage
	}
	{ // Scope view texture
		blend add
		map textures/sfx/monsterSniperView
		texgen screen
		scroll 0.5, 0.5
		scale 0.5, 0.5
		clamp
		glowStage
		scopeView	// Only visible in the rifle scope view
	}
}

