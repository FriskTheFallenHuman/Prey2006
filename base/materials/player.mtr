//
//
// tommy_liquid_head
//
models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head
{
	noShadows
//	noselfshadow
//	translucent
//	unsmoothedtangents
	matter_flesh
	//noshadows
	nooverlays

	renderbump -size 1024 1024 -trace 0.01 models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local2 models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_headhi_head2.lwo

//	diffusemap models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head
	{
		shaderfallback3
		blend diffusemap
		map models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head
		alphatest	0.5
	}
	/*
	bumpmap	addnormals(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local, heightmap(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_h, 7 ) )
//	bumpmap	models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local
	specularmap models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_s
	*/
	{
		shaderfallback3
		blend bumpmap
		map addnormals(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local, heightmap(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_h, 7 ) )
		highres
	}
	{
		shaderfallback3
		blend specularmap
		map models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_s
	}

	//shader stuff
	{
		map models/player/shadermaps/tommy_liquid_head
		maskcolor
		alphatest	0.5
	}
	{
		// skin
		shaderLevel3
		blend shader
		program skin.vfp

		fragmentparm	0	1, 0, 0, 0		// mask channel
		// fragmentparm	1	0.25, 0.0, .0	// sss color
		fragmentparm	1	0.6, 0.2, 0.2		// sss color
		fragmentparm	2	0.5, 0.5		// wrap around
		fragmentparm	3	1.5				// rim
		fragmentparm	4	.45, .45, .5, 10		// specular color, power
		fragmentparm	5	0.8, 0.8, 0.86, 10		// glancing specular color, power
		fragmentparm	6	0.17

		fragmentmap 1 highres addnormals(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local, heightmap(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_h, 7 ) )
		fragmentmap 4 models/player/shadermaps/tommy_liquid_head
		fragmentmap 5 models/player/shadermaps/tommy_liquid_head_s
		fragmentmap 6 models/player/shadermaps/tommy_liquid_head_s
		fragmentmap 7 models/player/shadermaps/tommy_liquid_head_mask
	}
	{
		shaderLevel3
		blend shader
		program hair.vfp

		fragmentparm	0	0, 1, 0, 0		// mask channel
		fragmentparm	1	.99			// flatten normalmap
		fragmentparm	2	0.1, -0.08			// highlight shift
		fragmentparm	3	0.30, 0.30, 0.34, 100		// hightlight color 1, exponent
		fragmentparm	4	0.12, 0.12, 0.14, 40		// hightlight color 2, exponent
		fragmentparm	5	0.55, 0.55, 0.55		// diffuse color

		fragmentmap 1 highres addnormals(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_local, heightmap(models/player/tommy_liquid/tommy_liquid_head/tommy_liquid_head_h, 7 ) )
		fragmentmap 4 models/player/shadermaps/tommy_liquid_head
		fragmentmap 5 models/player/shadermaps/tommy_liquid_head_s
		fragmentmap 6 uncompressed models/player/shadermaps/tommy_liquid_head_hair_t
		fragmentmap 7 models/player/shadermaps/tommy_liquid_head_mask
	}
	{ // Scope view texture
		blend add
		map textures/sfx/monsterSniperView
		texgen screen
		scroll 0.5, 0.5
		scale 0.5, 0.5
		clamp
		glowStage
		scopeView	// Only visible in the rifle scope view
	}
}

