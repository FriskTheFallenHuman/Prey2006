textures/fragment_fx/ftashipexhaust1
{
	qer_editorimage 	textures/roadhouse/rhshipexhaust1
	noshadows
	translucent
	forceoverlays

	{
		program			heathaze.vfp

		vertexparm		0       0, time	* 2.75// texture scrolling
		vertexparm		1       5			// magnitude of the distortion
		fragmentprogram			heathaze.vfp
		fragmentmap		0       _currentrender
		fragmentmap		1       textures/roadhouse/rhshipexhaust1 // the normal map for distortion
	}
}