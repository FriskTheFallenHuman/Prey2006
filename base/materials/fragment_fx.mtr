textures/fragment_fx/testcolormatrix_inversecolor
{
	qer_editorimage		textures/editor/vfp
	nonsolid
	noimpact
	{
		program		colorMatrix.vfp
		vertexparm	0	( 1 + sinTable[ 0.5 + time * 0.25 ]) / 2, ( 1 + sinTable[ time * 0.25 ]) / 2, ( 1 + sinTable[ time * 0.25 ]) / 2
		vertexparm	1	( 1 + sinTable[ time * 0.25 ]) / 2, ( 1 + sinTable[ 0.5 + time * 0.25 ]) / 2, ( 1 + sinTable[ time * 0.25 ]) / 2
		vertexparm	2	( 1 + sinTable[ time * 0.25 ]) / 2, ( 1 + sinTable[ time * 0.25 ]) / 2, ( 1 + sinTable[ 0.5 + time * 0.25 ]) / 2
		fragmentmap	0       _currentrender
	}
}

