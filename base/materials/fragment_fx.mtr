	nonsolid
	noimpact
	{
		program		colorMatrix.vfp
		vertexparm	0	0.33, 0.33, 0.33
		vertexparm	1	0.33, 0.33, 0.33
		vertexparm	2	0.33, 0.33, 0.33
		fragmentmap	0       _currentrender
