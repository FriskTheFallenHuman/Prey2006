{
	unsmoothedtangents
	matter_stone
	collision
	//translucent
	noshadows
	noOverlays
	{
		shaderLevel1

		program			refraction.vfp

		vertexparm		1       3.5*fadeIce[1+.3*(parm7-time)]			// magnitude of the distortion

